<launch>

  <!-- By default, Don't run in simulation mode -->
  <arg name="sim" default="false" />
  <arg name="port" default="/dev/ttyUSB0"/>

  <!-- specify the planning pipeline -->
  <arg name="pipeline" default="ompl" />

  <!-- By default, we are not in debug mode -->
  <arg name="debug" default="false" />

  <!-- By default, we will load or override the robot_description -->
  <arg name="load_robot_description" default="$(arg sim)"/>

  <arg name="use_rviz" default="true"/>


  <!-- If we do not have a robot connected -->
  <group if="$(arg sim)">
    <!-- Publish fake joint states -->
    <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
      <rosparam param="source_list">[move_group/fake_controller_joint_states]</rosparam>
    </node>

    <!-- Given the published joint states, publish tf for the robot links -->
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>
  </group>

  <!-- Run the main MoveIt! executable -->
  <include file="$(find Festino_arm_moveit_config)/launch/move_group.launch">
    <arg name="allow_trajectory_execution" value="true"/>
    <arg name="fake_execution" value="$(arg sim)"/>
    <arg name="info" value="true"/>
    <arg name="debug" value="$(arg debug)"/>
    <arg name="pipeline" value="$(arg pipeline)"/>
    <arg name="load_robot_description" value="$(arg load_robot_description)"/>
  </include>

  <!-- Run Rviz and load the default config to see the state of the move_group node -->
  <include file="$(find Festino_arm_moveit_config)/launch/moveit_rviz.launch" if="$(arg use_rviz)">
    <arg name="rviz_config" value="$(find Festino_arm_moveit_config)/launch/moveit.rviz"/>
    <arg name="debug" value="$(arg debug)"/>
  </include>

  <node name="arbotix" 
        pkg="arbotix_python"
        type="arbotix_driver"
        clear_params="true">
    <rosparam command="load"
              file="$(find pincher_arm_bringup)/config/arm.yaml" />
    <param name="sim" value="$(arg sim)"/>
    <param name="port" value="$(arg port)"/>
  </node>

  <node name="fake_joint_pub" 
        pkg="pincher_arm_bringup"
        type="fake_joint_pub"/>

  <node name="gripper_transmission" 
        pkg="pincher_arm_bringup"
        type="gripper_transmission">
    <rosparam command="load"
              file="$(find pincher_arm_bringup)/config/gripper_transmission.yaml"/>
  </node>

  <node name="gripper_controller"
        pkg="pincher_arm_bringup"
        type="gripper_controller"
        clear_params="true">
    <rosparam command="load"
              file="$(find pincher_arm_bringup)/config/gripper_controller.yaml" />
  </node>

  <node name="pruebaSrv"
      pkg="Festino_arm_moveit_demos"
      type="pruebaSrv"
  />
</launch>
